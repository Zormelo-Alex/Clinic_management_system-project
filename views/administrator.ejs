<%- include("./partials/header") %> 
    <div class="flex_top">
        <div class="nav">
            <div class="top">
                <img src="./resources/images/it2.jpg" alt="user_image">
                <h1 class="name"><%= username %> </h1>
                <h1 class="title">Administrator</h1>
            </div>
            <div class="bottom">
                <ul>
                    <li class="sm">Staff Management</li>
                    <li><a href="">Add Staff</a></li>
                    <li><a href="">Search Staff</a></li>
                    <li><a href="">Manage Schedule</a></li>
                    <li class="sm">Patient Management</li>
                    <li><a href="">Search Patient</a></li>
                    <li><a href="">Add Staff</a></li>
                    <li><a href="">Add Staff</a></li>
                </ul>
                <div class="log">
                    <a class="lo" href="">LogOut</a>
                </div>
            </div>
        </div>
        <div class="main">
            <div class="add_staff">
                <h2 class="title">
                    Add New Staff
                </h2>
                <div class="form">
                    <form action="">
                        <div class="name mb">
                            <div class="fullname">
                                <label for="">Full Name</label>
                                <input type="text" name="username" placeholder="Username" required>
                            </div>
                            <div class="dob">
                                <label for="">Date of birth</label>
                                <input type="date" name="dob" required>
                            </div>
                        </div>
                        <div class="gen mb">
                            <div class="gender">
                                <label class="mbs" for="">Gender</label>
                                <div class="g_ins">
                                    Male <input type="radio" name="gender">
                                Female <input type="radio" name="gender">
                                </div>
                            </div>
                            <div class="role">
                                <label for="">Select role</label>
                                <select name="role" id="" required>
                                    <option value="nurse">Nurse</option>
                                    <option value="pharmacist">Pharmacist</option>
                                    <option value="finance">Finance</option>
                                    <option value="receptionist">Receptionist</option>
                                </select>
                            </div>
                        </div>
                        <div class="others">
                            <div class="flex mb">
                                <div class="one">
                                    <label for="">Nationality</label>
                                    <input type="text" name="nationality" placeholder="Nationality">
                                </div>
                                <div class="two">
                                    <label for="">Place of birth</label>
                                    <input type="text" name="place" placeholder="Place of birth">
                                </div>
                            </div>
                            <div class="flex mb">
                                <div class="one">
                                    <label for="">Contact</label>
                                    <input type="text" name="phone" placeholder="Phone number">
                                </div>
                                <div class="two">
                                    <label for="">Email</label>
                                    <input type="email" name="email" placeholder="Enter Email">
                                </div>
                            </div>
                            <div class="flex mb">
                                <div class="one">
                                    <label for="">Address Line 1</label>
                                    <input type="text" name="address1" placeholder="Enter Address">
                                </div>
                                <div class="two">
                                    <label for="">Address Line 2</label>
                                    <input type="text" name="address2" placeholder="Enter Address">
                                </div>
                            </div>
                            <div class="flex mb">
                                <div class="one">
                                    <label for="">Emergency contact 1</label>
                                    <input type="text" name="emc" placeholder="Enter Contact">
                                </div>
                                <div class="two">
                                    <label for="">Emergency contact 2</label>
                                    <input type="text" name="emc2" placeholder="Enter Contact">
                                </div>
                            </div>
                            <div class="flex mb">
                                <div class="one">
                                    <label for="">Password</label>
                                    <input type="password" name="password" placeholder="Enter New Password">
                                </div>
                            </div>
                            <div class="btn">
                                <input type="submit" value="submit" class="submit">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>